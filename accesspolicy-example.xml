<?xml version="1.0" encoding="UTF-8"?>
<ap:accessPolicy
    xmlns:ap="http://dataone.org/service/types/0.6.0"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://dataone.org/service/types/0.6.0 ./dataoneTypes.xsd">

    <!-- Let Alice and Bob read and write, and any AuthenticatedUser read -->
    <allow>
        <principal>/C=US/O=SomeIdP/CN=Alice</principal>
        <principal>/C=US/O=SomeIdP/CN=Bob</principal>
        <permission>read</permission>
        <permission>write</permission>
        <resource>doi:10.0000/example_resource_id</resource>
    </allow>
    <allow>
        <principal>AuthenticatedUser</principal>
        <permission>read</permission>
        <resource>doi:10.0000/example_resource_id</resource>
    </allow>

    <!-- Let members of DataManagerGroup read and write, and any Public user
         Read -->
    <allow>
        <principal>/C=US/O=SomeIdP/CN=DataManagerGroup</principal>
        <permission>read</permission>
        <permission>write</permission>
        <resource>urn:lsid:example.org:data:example_resource_id:1</resource>
    </allow>
    <allow>
        <principal>Public</principal>
        <permission>read</permission>
        <resource>urn:lsid:example.org:data:example_resource_id:1</resource>
    </allow>

</ap:accessPolicy>
