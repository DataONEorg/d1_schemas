<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xs:schema xmlns="http://dataone.org/service/types/logging/0.5"
    version="0.5"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:common="http://dataone.org/service/types/common/0.5"
    targetNamespace="http://dataone.org/service/types/logging/0.5"
    elementFormDefault="unqualified" attributeFormDefault="unqualified">
    <xs:import namespace="http://dataone.org/service/types/common/0.5"
        schemaLocation="https://repository.dataone.org/software/cicore/trunk/schemas/common.xsd" />
    
    <!-- TODO: Discuss the namespace for this document, and pick an effective, versioned URI for the namespace -->

    <xs:simpleType name="Event">
        <xs:restriction base="xs:string">
            <xs:enumeration value="create"/>
            <xs:enumeration value="read"/>
            <xs:enumeration value="update"/>
            <xs:enumeration value="delete"/>
            <xs:enumeration value="replicate"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="LogEntry">
        <xs:sequence>
            <xs:element name="entryId" type="common:Identifier" 
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="identifier" type="common:Identifier" 
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="ipAddress" type="xs:string"
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="userAgent" type="xs:string"
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="principal" type="common:Principal"
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="event" type="Event"
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="dateLogged" type="xs:dateTime"
                minOccurs="1" maxOccurs="1"/>
            <xs:element name="memberNode" type="common:NodeReference"
                minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <!-- Definition of the Logging element -->
    <xs:element name="log">
      <xs:complexType>
        <xs:complexContent>
          <xs:extension base="common:Slice">
            <xs:sequence>
              <xs:element name="logEntry" type="LogEntry"
              minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
          </xs:extension>
        </xs:complexContent>
      </xs:complexType>
    </xs:element>
</xs:schema>
